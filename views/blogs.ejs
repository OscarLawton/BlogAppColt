<%- include("partials/header") %>

<% blogs.forEach((blog) => { %>
    <div>
        <h1><%= blog.title %> </h1>
        <img src="<%= blog.image %>" alt="">
        <h3><%= blog.body.substring(0, 100) %>...</h3>
        <h3><%= blog.created %></h3>
        <a href="/blogs/<%= blog._id %>">See More</a>
    </div>
    
<% }) %>

<%- include("partials/footer") %>